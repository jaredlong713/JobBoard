@model IEnumerable<JobBoard.DATA.EF.Location>

@{
    ViewBag.Title = "Index";
}

<section class="banner-area relative" id="home" style="background-image: url(/Content/img/header-bg.jpg); ">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    LOCATIONS
                </h1>
            </div>
        </div>
    </div>
</section>

<div class="container">
    <div class="row justify-content-center d-flex">
        <div class="col-lg-12 post-list">
            <div class="section-top-border">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.StoreNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.City)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.State)
                        </th>
                        <th>
                            Manager
                        </th>
                        <th>
                            Manage
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.StoreNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.City)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.State)
                            </td>
                            <td>
                                @String.Format(item.UserDetail.FirstName + " " + item.UserDetail.LastName)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Locations", new RouteValueDictionary(new { id = item.LocationId }))" class="genric-btn primary-border small">Edit</a>
                                <a href="@Url.Action("Details", "Locations", new RouteValueDictionary(new { id = item.LocationId }))" class="genric-btn primary-border small">Details</a>     
                            </td>
                            <td>
                                <a href="@Url.Action("Delete", "Locations", new RouteValueDictionary(new { id = item.LocationId }))" class="genric-btn danger-border small">Delete</a>
                            </td>
                        </tr>
                    }
                </table>
                <p>
                    <a href="@Url.Action("Create", "Locations")" class="genric-btn primary-border circle">Create New</a>
                </p>
            </div>
        </div>
    </div>
</div>