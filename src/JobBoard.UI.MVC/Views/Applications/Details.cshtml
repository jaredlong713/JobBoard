@model JobBoard.DATA.EF.Application

@{
    ViewBag.Title = "Details";
}

<section class="banner-area relative" id="home" style="background-image: url(/Content/img/header-bg.jpg); ">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    APPLICATION DETAILS
                </h1>
            </div>
        </div>
    </div>
</section>

<div class="container">
    <div class="row justify-content-center d-flex">
        <div class="col-lg-12 post-list">
            <div>
                <br/>
                <div>
                    <a href="@Url.Action("Reject", "Applications", new RouteValueDictionary(new { appID = Model.ApplicationId }))" class="genric-btn danger-border small">Reject</a>
                    <a href="@Url.Action("Approve", "Applications", new RouteValueDictionary(new { appID = Model.ApplicationId }))" class="genric-btn danger-border small">Approve</a>
                </div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        Applicant
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.UserDetail.FirstName)
                        @Html.DisplayFor(model => model.UserDetail.LastName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.ApplicationDate)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ApplicationDate)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.ManagerNotes)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ManagerNotes)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.ApplicationStatusId)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ApplicationStatus.StatusName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.ResumeFilename)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ResumeFilename)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.OpenPosition.OpenPositionId)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.OpenPosition.Position.Title)
                    </dd>

                </dl>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-9 col-lg-10">
                        <a href="@Url.Action("Edit", "Applications", new RouteValueDictionary(new { id = Model.ApplicationId }))" class="genric-btn primary-border circle">Edit</a>
                        <br /><br />
                    </div>

                    <div class=" col-md-3 col-lg-2">
                        <a href="@Url.Action("Index", "Applications")" class="genric-btn info-border circle">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
