@{
    ViewBag.Title = "Forgot Password Confirmation";
}

<section class="banner-area relative" id="home" style="background-image: url(/Content/img/header-bg.jpg); ">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    FORGOT PASSWORD
                </h1>
            </div>
        </div>
    </div>
</section>

<div class="container">
    <div class="row justify-content-center d-flex">
        <div>
            <p>
                Please check your email to reset your password.
            </p>
            <p class="text-danger">
                For DEMO only: You can click this link to reset password: <a href="@ViewBag.Link">link</a>
                Please change this code to register an email service in IdentityConfig to send an email.
            </p>
        </div>
    </div>
</div>