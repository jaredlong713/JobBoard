@model IEnumerable<JobBoard.DATA.EF.Position>

@{
    ViewBag.Title = "Index";
}


<section class="banner-area relative" id="home" style="background-image: url(/Content/img/header-bg.jpg); ">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    POSITIONS
                </h1>
            </div>
        </div>
    </div>
</section>

<div class="container">
    <div class="row justify-content-center d-flex">
        <div class="col-lg-12 post-list">
            <p>

            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        Manage
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>

                        <td>
                            <a href="@Url.Action("Edit", "Positions", new RouteValueDictionary(new { id = item.PositionId }))" class="genric-btn primary-border small">Edit</a>
                            <a href="@Url.Action("Details", "Positions", new RouteValueDictionary(new { id = item.PositionId }))" class="genric-btn primary-border small">Details</a>
                        </td>
                        <td>
                            <a href="@Url.Action("Delete", "Positions", new RouteValueDictionary(new { id = item.PositionId }))" class="genric-btn danger-border small">Delete</a>
                        </td>
                    </tr>
                }

            </table>
            <p>
                <a href="@Url.Action("Create", "Positions")" class="genric-btn primary-border circle">Create New</a>
            </p>
        </div>
    </div>
</div>